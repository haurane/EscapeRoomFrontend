{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "edge",
      "request": "launch",
      "name": "localhost (Edge)",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "localhost (Chrome)",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    }
    {
      "type": "firefox",
      "request": "launch",
      "name": "localhost (Firefox)",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "firefoxExecutable": "/usr/bin/firefox"
    }
  ]
}
